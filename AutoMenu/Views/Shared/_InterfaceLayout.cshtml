@{
    var Model = (RestaurantResponse)ViewBag.ViewModelTRestaurantResponse;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/Interface_Layout.css">
    @await RenderSectionAsync("styles", required: false)
</head>

<body>
    <main id="main-interface">
        <header>
            <div id="div-logo-hamburguer">

                <div id="div-func-hamburguer" onclick="show_func_hamburguer()">
                    <label class="burger" for="burger">
                        <input type="checkbox" id="burger">
                        <span></span>
                        <span></span>
                        <span></span>
                    </label>
                    <span id="Text-hamburguer">Explore</span>
                </div>
                <h1>AUTO MENU</h1>

            </div>

            <div id="div-user">
                <img src="~/images/User-standard.png" alt="Usuario Padrão" asp-append-version="true">
                <h4>@if (Model == null)
                    {
                        <text>Usuario: Não registrado</text>
                    }
                    else
                    {
                        <text> @Model.Name</text>
                    }
                </h4>
                <h6>Restaurante</h6>
            </div>
        </header>

        <section id="menu-nav" style="display: none;">
            <nav>

                <div>
                    <a href="~/RegisterMenu">
                        <span>Cadastro do <br>
                            cardapio
                        </span>
                    </a>
                </div>
                <div>
                    <a href="~/ListMenu">
                        <span>Listagem do <br>
                            menu
                        </span>
                    </a>
                </div>
                <div></div>
            </nav>
        </section>
        <script src="~/js/Interface_Layout.js"></script>
        <div>
            @RenderBody()
        </div>
    </main>
</body>

</html>
